import matplotlib.pyplot as plt
import numpy as np

def tocke(x1, y1, x2, y2):
    k = (y2-y1)/(x2-x1)
    l = y1-k*x1
    print("p... y = {}x + {}".format(k, l))

    x = []
    y = []
    
    x = np.linspace(0,10,100)
    y = k*x+l
    
    plt.xlabel("x")
    plt.ylabel("y")
    plt.title("Pravac kroz dvije toƒçke")
    plt.plot(x1, y1, marker='.')
    plt.plot(x2, y2, marker='.')
    plt.plot(x, y)
    plt.show()


tocke(1,3,4,9)
